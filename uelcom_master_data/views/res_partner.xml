<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="res_partner_form_uelcom_master_data">
        <field name="name">res.partner.form.uelcom.master.data</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="Clients data">
                    <group>
                        <field name="sex"/>
                        <field name="age"/>
                        <field name="total_points"/>
                        <field name="total_amount"/>
                        <field name="fidelity_selection"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
