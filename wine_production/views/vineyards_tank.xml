<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>


    <record id="view_ vineyards_list" model="ir.ui.view">
         <field name="name"> vineyards_list_view</field>
         <field name="model">wine.vineyard</field>
         <field name="arch" type="xml">
             <tree string=" vineyards">
               <field name="name"/>
               <field name="surface"/>
               <field name="responsible"/>
             </tree>
         </field>
     </record>

     <record id="view_ vineyards_form" model="ir.ui.view">
          <field name="name"> vineyards_form_view</field>
          <field name="model">wine.vineyard</field>
          <field name="arch" type="xml">
            <form string="Vigneto">
              <header>
                <!-- Buttons go here - see. p. 224 ODE-->
                <field name="biological_phase" widget="statusbar" clickable="True" options="{'fold_field':'fold'}" />
               </header>
              <sheet>
                <group name="group_top" string="Vigneti">
                  <group name="group_left">
                    <field name="name"/>
                    <field name="surface"/>
                    <field name="biological_phase"/>
                  </group>
                  <group name="group_right">
                    <field name="ref_vineyard"/>
                    <field name="responsible"/>
                  </group>
               </group>
                <group>
                 <field name="comments"/>
                </group>
              <notebook>
                <page string="Events" name="events">
                     <field name="event_ids"/>
                </page>
               <page string="Treatments" name="treatments" >
                    <field name="treatment_ids"/>
               </page>
             </notebook>

              </sheet>

           </form>
          </field>
      </record>

      <!--editable  list view for events-->
      <record id="view_events_list" model="ir.ui.view">
         <field name="name"> events_list_view</field>
         <field name="model">wine.event</field>
         <field name="arch" type="xml">
             <tree editable='True'>
               <field name="date"/>
               <field name="event"/>
             </tree>
         </field>
      </record>



      <!-- Creating the TANKS menu -->

    <act_window id="action_tanks"
      name="Tanks and barrels"
      res_model="wine.tank"
      view_mode="tree,form"
      />

    <menuitem id='menu_tanks'
      string='Tanks and barrels'
      parent="menu_wine_assets_management"
      action="action_tanks"
      />

    <record id="view_ tanks_list" model="ir.ui.view">
       <field name="name">tanks_list_view</field>
       <field name="model">wine.tank</field>
       <field name="arch" type="xml">
           <tree>
             <field name="name"/>
             <field name="dimensions"/>
             <field name="content"/>
           </tree>
       </field>
    </record>

    <record id="view_ tanks_form" model="ir.ui.view">
        <field name="name">tanks_form_view</field>
        <field name="model">wine.tank</field>
        <field name="arch" type="xml">
          <form>
            <sheet>

              <group name="group_top" string="Tank and barrels">
                <group name="group_left">
                  <field name="name"/>
                  <field name="functioning"/>
                  <field name="related_tank"/>
                  <field name="dimensions"/>
                  <field name="content"/>
                </group>
                <group name="group_right">
                  <field name="tank_image" widget='image'/>
                </group>
             </group>
             <group string="Content">
             <notebook>
               <page string="Lotti uva" name="events">
                    <field name="grape_lot_ids"/>
               </page>
              <page string="Lotti mosto" name="treatments" >
                   <field name="wort_lot_ids"/>
              </page>
            </notebook>
          </group>
          <notebook>
            <page string="Riparazioni" name="repairments" >
                 <field name="repairment_ids"/></page>
          </notebook>

            </sheet>

         </form>
        </field>
    </record>

    <!-- Creating the meteo menu -->

  <act_window id="action_meteos"
    name="Meteo"
    res_model="wine.meteo"
    view_mode="tree,form"
    />

  <menuitem id='menu_meteos'
    string='Meteo'
    parent="menu_wine_others"
    action="action_meteos"
    />


  <record id="view_ meteos_list" model="ir.ui.view">
     <field name="name"> meteos_list_view</field>
     <field name="model">wine.meteo</field>
     <field name="arch" type="xml">
         <tree>
           <field name="date"/>
           <field name="description"/>
           <field name="umidity"/>
         </tree>
     </field>
  </record>



  <record id="view_ meteos_form" model="ir.ui.view">
      <field name="name">meteos_form_view</field>
      <field name="model">wine.meteo</field>
      <field name="arch" type="xml">
        <form>
          <sheet>

            <group name="group_top" string="meteo">
              <group name="group_left">
                <field name="date"/>
                <field name="description"/>
                <field name="umidity"/>
              </group>
           </group>

          </sheet>

       </form>
      </field>
    </record>

  </data>
</odoo>
