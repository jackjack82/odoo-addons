<?xml version="1.0" encoding="utf-8"?>

<odoo>
<data>

    <!-- PRODUCT TEMPLATE VIEWS -->

    <record model="ir.ui.view" id="product_template_only_form_view_add_nincotine">
        <field name="name">product.template.only.form.view.add.nincotine</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="bottle_ml" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
                <field name="has_nicotine" attrs="{'invisible': [('product_variant_count', '&gt;', 1)]}"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="product_template_only_tree_view_add_nincotine">
        <field name="name">product.template.only.tree.view.add.nincotine</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="has_nicotine"/>
            </field>
        </field>
    </record>

    <!-- PRODUCT VARIANT VIEWS -->

    <record model="ir.ui.view" id="product_variant_easy_edit_view_add_nincotine">
        <field name="name">product.product.easy.edit.view.add.nincotine</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <field name="default_code" position="after">
                <field name="bottle_ml"/>
                <field name="has_nicotine"/>
            </field>
        </field>
    </record>


</data>
</odoo>
